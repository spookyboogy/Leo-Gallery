#!/bin/bash

# Counter variable to keep track of the numbering
counter=1

# Iterate over each file in files.txt
while IFS= read -r filename; do
  # Replace "SimpleScanStation" with "Leo"
  new_filename=$(echo "$filename" | sed 's/SimpleScanStation/Leo/')

  # Add a simple numbering convention
  new_filename="${new_filename%_*}_$counter.jpg"

  # Increment the counter for the next file
  ((counter++))

  # Rename the file
  mv "$filename" "$new_filename"

done < files.txt

